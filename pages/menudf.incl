function writemenufunctions ($menuarray)
{
echo '<script type="text/javascript">';
        foreach ($menuarray as $key => $iteminfo)
        {
echo 'function show' . $key . 'tip ()';
echo '{';
echo '  document.getElementById ("' . $key . 'tip").style.display = "block";';
echo '}';

echo 'function hide' . $key . 'tip ()';
echo '{';
echo '  document.getElementById ("'. $key . 'tip").style.display = "none";';
echo '}';
        }
echo '</script>';
}

function writemenuline ($menuarray, $active)
{
        global $url, $link_text, $tip_text;

        foreach ($menuarray as $key => $iteminfo)
        {
echo '    <span class="place">';
echo '      <span class="tooltip" id="' . $key . 'tip">';
echo $iteminfo [$tip_text];
echo '      </span>';
echo '    </span>';

                if ($active != $key)
                {
echo '  <a class="navitem" href="' . $iteminfo [$url] . '"';
                }
                else
                {
echo '  <a class="navitem_active" href="' . $iteminfo [$url] . '"';
                }
echo '     onmouseover="show' . $key . 'tip ();"';
echo '     onmouseout ="hide' . $key . 'tip ();">';
echo $iteminfo [$link_text];
echo '  </a>';


        }
}
